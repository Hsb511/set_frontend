<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <path
        android:name="iconBackground"
        android:fillColor="@color/splash_icon_background"
        android:pathData="
        M 100 20
        A 80 80 0 1 1 99.9 20
    "/>

    <group android:name="revealGroup">

        <!-- This rectangle will animate from ~0 width to full width -->
        <clip-path
            android:name="revealClip"
            android:pathData="M0,0 L0.01,0 L0.01,200 L0,200 Z" />

        <!-- Your existing positioning/scaling -->
        <group
            android:name="logoGroup"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translateX="50"
            android:translateY="50">

            <!-- LEFT -->
            <path
                android:name="leftFill"
                android:pathData="
                    M 13.3333 40
                    Q 3.3333 33.3333 6.6667 25
                    C 25 -6.6667 100 6.6667 95.6522 57.1429
                    C 95.6522 100 25 133.3333 86.6667 160
                    Q 96.6667 166.6667 93.3333 175
                    C 75 213.3333 0 186.6667 4.3478 142.8571
                    C 4.3478 100 75 66.6667 13.3333 40
                    Z"
                android:fillColor="@color/splash_icon"
                android:strokeColor="@color/splash_icon"
                android:strokeWidth="7.5"
                android:strokeLineJoin="round"
                android:strokeLineCap="round"/>

            <!-- RIGHT (left shifted +100 on X) -->
            <path
                android:name="rightFill"
                android:pathData="
                    M 113.3333 40
                    Q 103.3333 33.3333 106.6667 25
                    C 125 -6.6667 200 6.6667 195.6522 57.1429
                    C 195.6522 100 125 133.3333 186.6667 160
                    Q 196.6667 166.6667 193.3333 175
                    C 175 213.3333 100 186.6667 104.3478 142.8571
                    C 104.3478 100 175 66.6667 113.3333 40
                    Z"
                android:fillColor="@color/splash_icon"
                android:strokeColor="@color/splash_icon"
                android:strokeWidth="7.5"
                android:strokeLineJoin="round"
                android:strokeLineCap="round"/>

        </group>
    </group>

    <group
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:translateX="50"
        android:translateY="50">

        <path
            android:name="left"
            android:fillAlpha="0"
            android:pathData="
            M 13.3333 40
            Q 3.3333 33.3333 6.6667 25
            C 25  -6.6667 100  6.6667 95.6522 57.1429
            C 95.6522 100 25 133.3333 86.6667 160
            Q 96.6667 166.6667 93.3333 175
            C 75 213.3333 0 186.6667 4.3478 142.8571
            C 4.3478 100 75 66.6667 13.3333 40
            Z"
            android:strokeWidth="6"
            android:strokeColor="#FF0000"
            android:strokeLineCap="round"
            android:strokeLineJoin="round" />

        <!-- RIGHT = LEFT shifted +100 on X -->
        <path
            android:name="right"
            android:fillAlpha="0"
            android:pathData="
            M 113.3333 40
            Q 103.3333 33.3333 106.6667 25
            C 125  -6.6667 200  6.6667 195.6522 57.1429
            C 195.6522 100 125 133.3333 186.6667 160
            Q 196.6667 166.6667 193.3333 175
            C 175 213.3333 100 186.6667 104.3478 142.8571
            C 104.3478 100 175 66.6667 113.3333 40
            Z"
            android:strokeWidth="6"
            android:strokeColor="#FF0000"
            android:strokeLineCap="round"
            android:strokeLineJoin="round" />
    </group>

</vector>
